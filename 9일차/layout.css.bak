html, body{height:100%;}
#wrap{
	position:relative;
	min-height:100%;
	background-image:url(img/background.jpg);
	background-repeat:no-repeat;
	background-size:100% 100%;
}
#header{
	position:relative;
	height:80px;
	border:2px solid #000;
	text-align:center;
}

.con-area{width:1400px; margin:0 auto;}

.con-area::after{
	content:''; display:block; clear:both;

}

#header #logo{
	position:absolute;
	left:20px;
	top:20px;
}

#header #logo{
	display:block;
	font-size:30px; 
	color:#orange; 
	font-weight:bold;
}

#header #nav{
	display:inline-block;
}

#header #nav .menu-list{
	
}
#header #nav .menu-list::after{
	content:''; display:block; clear:both;
}
#header #nav .menu-list > li{
	float:left;
}

#header #nav .menu-list > li > a{
	display:block;
	padding:0 30px;
	font-size:24px;
	line-height:80px;
	color:#fff;
	font-weight:bold;
}

#header .sitemap{
	position:absolute;
	right:20px;
	top:50%;
	margin-top:-15px;
}

#header .sitemap .sitemap-btn{
	display:block;
	position:relative;
	width:30px;
	height:30px;
}

#header .sitemap .sitemap-btn > span{
	display:block;
	position:absolute;
	left:0;
	width:100%;
	height:2px;
	background:#fff;
}
#header .sitemap .sitemap-btn > span:first-child{top:0;}
#header .sitemap .sitemap-btn > span:nth-child(2){top:50%; margin-top:-1px;}
#header .sitemap .sitemap-btn > span:last-child{bottom:0;}

#main{position:relative;}
#main #section-01{
	padding-top:100px;
	text-align:center;
}

#main #section-01 .info-box{
	display:inline-block;
}

#main #section-01 .info-box .txt-01{
	margin-bottom:15px;
	color:#fff;
	font-size:20px;
	text-shadow: 1px 1px 2px #000;
}

#main #section-01 .info-box h2{
	margin-bottom:15px;
	color:#fff;
	font-size:25px;
	font-weight:blod;
	text-shadow: 1px 1px 2px #000;
}

#main #section-01 .info-box .txt-02{
	color:#fff;
	font-size:18px;
	text-shadow: 1px 1px 2px #000;
}

#main #section-02{
	margin-top:100px;
}

#main #section-02 .quick-menu{}


#main #section-02 .quick-menu::after{
	content:''; display:block; clear:both;
}
#main #section-02 .quick-menu > li{
	float:left;
	width:25%;
	padding:0 15px;
}

#main #section-02 .quick-menu > li > a{
	display:block;
	height:200px;
	padding-top:20px;
	background-color:rgba(255,255,255,0.8);
	text-align:center;
}
#main #section-02 .quick-menu > li > a > figure{
	margin-bottom:15px;
}

#main #section-02 .quick-menu > li > a > figure > img{
	width:80px;
}

#main #section-02 .quick-menu > li > a > strong{
	display:block;
	margin-bottom:10px;
	font-size:20px;
}

#footer{
	position:absolute;
	left:0;
	bottom:0;
	width:100%;
	background:#000;
}

#footer .con-area{
	padding:25px 0;
}

#footer .foot-logo{
	float:left;
	font-size:25px;
	color:#fff;
}

#footer .foot-info{
	overflow:hidden;
	padding-left:55px;
}

#footer .foot-info address{
	color:#fff;
}

#footer .foot-info .copyright{
	color:#fff;
}
